{
    appId: "com.folder-wizard.app",
    productName: "Folder Wizard",
    copyright: "Copyright Â© 2025 Halil Furkan Karademir",
    directories: {
        output: "release/${version}",
    },
    files: [
        "dist/**/*",
        "src/electron/**/*",
        "package.json",
        "public/**/*",
        "!**/*.map",
    ],
    win: {
        target: ["nsis"],
        icon: "src/assets/images/logo.ico",
        requestedExecutionLevel: "asInvoker",
    },
    nsis: {
        oneClick: false,
        allowToChangeInstallationDirectory: true,
        perMachine: false,
    },
    asar: true,
    compression: "maximum",
    removePackageScripts: true,
    nodeGypRebuild: false,
    npmRebuild: false,
}
